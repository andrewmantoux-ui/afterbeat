    <!-- Script para la funcionalidad de cambio de idioma -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const langToggle = document.getElementById('lang-toggle');
            const body = document.body;

            // Funci√≥n para aplicar el cambio de idioma
            const applyLanguage = (newLang) => {
                const titleElement = document.querySelector('title');
                if (titleElement) {
                    titleElement.textContent = titleElement.getAttribute(`data-lang-${newLang}`);
                }
                
                body.classList.remove('lang-es', 'lang-en');
                body.classList.add(`lang-${newLang}`);
                
                document.querySelectorAll('[data-lang-es]').forEach(el => {
                    const esText = el.dataset.langEs;
                    const enText = el.dataset.langEn;
                    
                    if (newLang === 'en') {
                        // Usar innerHTML para manejar las negritas (markdown **)
                        el.innerHTML = enText.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
                    } else {
                        el.innerHTML = esText.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
                    }
                });
            };

            // Listener para el bot√≥n de cambio de idioma
            langToggle.addEventListener('click', () => {
                const currentLang = body.classList.contains('lang-es') ? 'es' : 'en';
                const newLang = currentLang === 'es' ? 'en' : 'es';
                applyLanguage(newLang);
            });

            // Inicializar el idioma al cargar (por defecto ES)
            applyLanguage('es');
        });
    </script>
</body>
</html>
